<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.distantshoresmedia.activities.ShowQrCodeActivity">


    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/qr_image_view"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/save_qr_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save QR Image"
        android:id="@+id/save_qr_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveQrCodeClicked"
        android:visibility="gone"/>


</RelativeLayout>
