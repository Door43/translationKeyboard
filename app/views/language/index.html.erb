

<h1>Keyboards for <%= @language_obj.name %></h1>

<div class="panel-group" id="accordion">

<% i=0 %>
<% @keyboards_for_language_iso.each do |a_keyboard| %>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse<%= i %>">
              <%= a_keyboard.name %> Region: <%= a_keyboard.region_name %> (<%= a_keyboard.iso_region %>)
            </a>
          </h4>
        </div>
        <div id="collapse<%= i %>" class="panel-collapse collapse in">
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-7">
                <p>Language and Region Description</p>
              </div>

              <div class="col-xs-7">
                 <div class="row">
                   <div class="col-xs-14">
                     <h3>Device Keyboards Available</h3>
                   </div>
                 </div>
                   <% a_keyboard.keyboard_variants.each do |a_keyboard_variant| %>
                    <div class="row">
                       <div class="col-xs-2">
                         <%= image_tag a_keyboard_variant.keyboard_type.icon_path %>
                       </div>
                      <div class="col-xs-4">
                        <%= a_keyboard_variant.keyboard_type.name %>
                      </div>
                      <div class="col-xs-5">
                        <%= link_to "View Keyboard", keyboard_variant_path(keyboard_variant_id: a_keyboard_variant.id), class: "btn btn-primary btn-xs"  %>
                      </div>

                    </div>
                   <% end %>
              </div>

            </div>

          </div>
        </div>
      </div>
<% i+=1 %>
<% end %>



</div>