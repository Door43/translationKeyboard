

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, class: "form-control", :placeholder => "Email Address"  %>


    <%= content_tag :button, :type => :submit, :class => "btn btn-lg btn-primary btn-block" do %>
        Email password reset instructions
    <% end %>


<% end %>

<%= render "devise/shared/links" %>
